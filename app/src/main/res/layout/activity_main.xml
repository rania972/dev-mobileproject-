<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FCFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gifView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waslny"
        android:textColor="#3278AC"
        android:textSize="42sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/gifView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Email"
        android:background="@drawable/rounded_input"
        android:padding="14dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="24dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_motpasse"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Mot de passe"
        android:background="@drawable/rounded_input"
        android:padding="14dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Se Connecter"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#296CC6"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_motpasse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_go_to_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pas encore de compte ? S'inscrire ici"
        android:textColor="#3278AC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>